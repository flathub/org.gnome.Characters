{
    "app-id": "org.gnome.Characters",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "command": "gnome-characters",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "noto-emoji",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "cp ./fonts/NotoColorEmoji.ttf /app/share/fonts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/googlefonts/noto-emoji/archive/refs/tags/v2.034.tar.gz",
                    "sha256": "a5af92ba8e297e447562d7bdb11453fa40be6d88655e4a647976f0c9be4245ab"
                }
            ]
        },
        {
            "name": "gnome-desktop",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddebug-tools=false",
                "-Dudev=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/42/gnome-desktop-42.0.tar.xz",
                    "sha256": "f3caa293a5e86f6ccad18f817273db1c67061e680d79d839aa8a7528e5bb26d6",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-desktop"
                    }
                }
            ]
        },
        {
            "name": "gnome-characters",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-characters/42/gnome-characters-42.0.tar.xz",
                    "sha256": "5da0ffb816f8a6b44f303744ca827a34080118c1c938d8d79af17b7fe67980f8",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-characters"
                    }
                }
            ]
        }
    ]
}
