{
    "id": "org.gnome.Characters",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "command": "gnome-characters",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "noto-emoji",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "cp ./fonts/NotoColorEmoji.ttf /app/share/fonts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/googlefonts/noto-emoji/archive/refs/tags/v2.047.tar.gz",
                    "sha256": "2cfaf5a427eb26334cdb30d98e4a0c005b660504a339249dc54373e566f09b50"
                }
            ]
        },
        {
            "name": "gnome-desktop",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddebug_tools=false",
                "-Dudev=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/44/gnome-desktop-44.1.tar.xz",
                    "sha256": "ae7ca55dc9e08914999741523a17d29ce223915626bd2462a120bf96f47a79ab",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-desktop"
                    }
                }
            ]
        },
        {
            "name": "gnome-characters",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-characters/48/gnome-characters-48.0.tar.xz",
                    "sha256": "a2c32ca54d911db2404420350d3442e691a2dce8b0f5d00899f66cff8c3c8d71",
                    "x-checker-data": {
                        "type": "gnome",
                        "is-important": true,
                        "name": "gnome-characters"
                    }
                }
            ]
        }
    ]
}
