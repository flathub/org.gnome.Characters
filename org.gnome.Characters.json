{
    "app-id": "org.gnome.Characters",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "command": "gnome-characters",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "noto-emoji",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "cp ./fonts/NotoColorEmoji.ttf /app/share/fonts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/googlefonts/noto-emoji/archive/refs/tags/v2.034.tar.gz",
                    "sha256": "a5af92ba8e297e447562d7bdb11453fa40be6d88655e4a647976f0c9be4245ab"
                }
            ]
        },
        {
            "name": "gnome-desktop",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddebug_tools=false",
                "-Dudev=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/44/gnome-desktop-44.tar.xz",
                    "sha256": "ec8168a3ba91cab8772d56cc373a2bd309ca4ea1f00e5087e60faccbdb3cc985",
                    "x-checker-data": {
                        "type": "gnome",
                        "is-important": true,
                        "name": "gnome-desktop"
                    }
                }
            ]
        },
        {
            "name": "gnome-characters",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-characters/44/gnome-characters-44.0.tar.xz",
                    "sha256": "05b15c028cc190aef92e6092fd84fa8d5f2448e0e9076446a3566f3a081ff50b",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-characters"
                    }
                }
            ]
        }
    ]
}
